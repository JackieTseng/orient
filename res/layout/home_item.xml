<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/home_item_image"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pic_2"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:id="@+id/home_item_layout2"
        android:layout_toRightOf="@id/home_item_image"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房间："
                android:textSize="12sp"
                android:textColor="#76ad35"/>

            <TextView
                android:id="@+id/home_item_roomname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="维多利亚的宵夜"
                android:maxEms="10"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#76ad35" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="起始地点:" />

            <TextView
                android:id="@+id/home_item_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="9sp"
                android:maxEms="10"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="广州大学城中二横路" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="开始时间:" />

            <TextView
                android:id="@+id/home_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="9sp"
                android:maxEms="10"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="2013-12-24    13:30" />

        </LinearLayout>
    </LinearLayout>


    <ImageButton
        android:id="@+id/home_item_button"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:focusableInTouchMode="true"
        android:src="@drawable/joined" />


    
</RelativeLayout>
