<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F3F3"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navigationbar" >

        <TextView
            android:id="@+id/game_final_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="创建房间"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/back_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="#00000000"
            android:src="@drawable/back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:padding="20dp" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_white_2" >

            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/roomedit"/>
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="房间名字"
                android:textColor="#76ad35"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/roomName_editText"
                android:layout_width="160dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/fillet_white_2"
                android:ems="10"
                android:singleLine="true"
                android:textSize="13sp"
                android:inputType="none" />
        </LinearLayout>
        
        <include
            android:id="@+id/line1"
            android:layout_below="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            layout="@layout/line" >
        </include>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="15dp"
            android:background="#fff" >

            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/peopleedit"/>
            
            <TextView
                android:id="@+id/Text02"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="每组人数"
                android:textColor="#76ad35"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/numpergroup"
                android:layout_width="160dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textSize="13sp"
                android:singleLine="true"
                android:background="@drawable/fillet_white_2"
                android:inputType="number" />
        </LinearLayout>
        
        <include
            android:id="@+id/line2"
            android:layout_below="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            layout="@layout/line" >
        </include>

        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:background="#fff" >

            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/timeedit"/>
            
            <TextView
                android:id="@+id/TextView03"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="起始时间"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#76ad35"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/room_create_2_date"
                android:layout_width="160dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:inputType="none"
                android:singleLine="true"
                android:background="@drawable/fillet_white_2"
                android:textSize="13sp" />

        </LinearLayout>

        <include
            android:id="@+id/line3"
            android:layout_below="@+id/LinearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            layout="@layout/line" >
        </include>

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:src="@drawable/next" />

    </RelativeLayout>

</LinearLayout>