<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

   <RelativeLayout
        android:id="@+id/home_up"
        android:layout_width="match_parent"
        android:layout_height="230dp">
        
        <ImageView 
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:src="@drawable/orient"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"/>
        
        <ImageView 
            android:id="@+id/home_background"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/title"
            android:scaleType="fitXY"
            android:src="@drawable/top"
            android:contentDescription="@string/app_name"/>
        
        <RelativeLayout
            android:id="@+id/addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/time"
            android:layout_centerHorizontal="true"
            >      
            
            <ImageView
                android:id="@+id/imageView1"
                android:background="#76ad35"
                android:scaleType="fitXY"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/locationmark" />
            
            <TextView
                android:id="@+id/addr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView1"
                android:text="广州大学城中山大学"
                android:textColor="#76ad35"
                android:singleLine="true"
                android:maxEms="10"
                android:textSize="12sp" />

        </RelativeLayout> 
        
        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/addr"
            android:layout_marginBottom="2dp"
            android:text="Orient_L"
            android:textColor="#282828"
            android:textSize="15sp" />
        
        <ImageView
            android:id="@+id/head"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/user"
            android:src="@drawable/head" />
        
        <ImageView
            android:id="@+id/time"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/time" />
        
        <ImageView
            android:id="@+id/join"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/time"
            android:src="@drawable/location" />
        
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_up"
        android:background="#fff" >
    </android.support.v4.view.ViewPager>

</RelativeLayout>